<%%= form_with(model: [@<%= singular_table_name %>.<%= nested_parent_name %>, @<%= singular_table_name %>]) do |form| %>
  <%%= render "shared/errors", object: form.object %>

<% for attribute in attributes -%>
  <div class="field">
    <%%= form.label :<%= attribute.name %> %>
    <%%= form.<%= attribute.field_type %> :<%= attribute.name %>, class: "form-input" %>
  </div>
<% end -%>
  <div class="actions">
    <%%= form.submit %>
  </div>
<%% end %>
